--// Rael Hub - Script único
--// Feito para Delta Executor
--// by ooncity_kkj

local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")

local state = {
    infJump = false,
    fly = false,
    flySpeed = 50,
    esp = false,
    noclip = false,
    wsBoost = 16,
    fullbright = false
}

-- Infinite Jump
UserInputService.JumpRequest:Connect(function()
    if state.infJump and LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("Humanoid") then
        LocalPlayer.Character:FindFirstChild("Humanoid"):ChangeState("Jumping")
    end
end)

-- Fly
local bodyVel, bodyGyro
local function flyToggle(on)
    local char = LocalPlayer.Character
    if not char or not char:FindFirstChild("HumanoidRootPart") then return end
    if on then
        local hrp = char.HumanoidRootPart
        bodyVel = Instance.new("BodyVelocity", hrp)
        bodyVel.MaxForce = Vector3.new(9e9,9e9,9e9)
        bodyVel.Velocity = Vector3.new(0,0,0)

        bodyGyro = Instance.new("BodyGyro", hrp)
        bodyGyro.MaxTorque = Vector3.new(9e9,9e9,9e9)

        RunService.Heartbeat:Connect(function()
            if state.fly and bodyVel and bodyGyro then
                local cam = workspace.CurrentCamera
                bodyGyro.CFrame = cam.CFrame
                bodyVel.Velocity = cam.CFrame.LookVector * state.flySpeed
            end
        end)
    else
        if bodyVel then bodyVel:Destroy() bodyVel=nil end
        if bodyGyro then bodyGyro:Destroy() bodyGyro=nil end
    end
end

-- ESP
local function toggleESP(on)
    for _,plr in pairs(Players:GetPlayers()) do
        if plr ~= LocalPlayer then
            local char = plr.Character
            if char and char:FindFirstChild("HumanoidRootPart") then
                if on then
                    if not char:FindFirstChild("RaelESP") then
                        local h = Instance.new("Highlight")
                        h.Name = "RaelESP"
                        h.FillTransparency = 0.6
                        h.OutlineColor = Color3.fromRGB(0,255,0)
                        h.Parent = char
                    end
                else
                    if char:FindFirstChild("RaelESP") then
                        char:FindFirstChild("RaelESP"):Destroy()
                    end
                end
            end
        end
    end
end

-- Noclip
RunService.Stepped:Connect(function()
    if state.noclip and LocalPlayer.Character then
        for _,part in pairs(LocalPlayer.Character:GetDescendants()) do
            if part:IsA("BasePart") then
                part.CanCollide = false
            end
        end
    end
end)

-- FullBright
local Lighting = game:GetService("Lighting")
local function toggleFullBright(on)
    if on then
        Lighting.Brightness = 2
        Lighting.ClockTime = 14
        Lighting.FogEnd = 1e6
        Lighting.GlobalShadows = false
        Lighting.OutdoorAmbient = Color3.new(1,1,1)
    else
        Lighting.GlobalShadows = true
        Lighting.ClockTime = 0 -- volta padrão (noite)
    end
end

-- Anti AFK
for _,v in pairs(getconnections(LocalPlayer.Idled)) do
    v:Disable()
end

--// Interface RayField
local Window = Rayfield:CreateWindow({
    Name = "Rael Hub",
    LoadingTitle = "Rael Hub",
    LoadingSubtitle = "by ooncity_kkj",
    ConfigurationSaving = {
        Enabled = true,
        FileName = "RaelHub"
    }
})

-- Aba Movement
local TabMove = Window:CreateTab("Movement")
TabMove:CreateToggle({
    Name = "Infinite Jump",
    CurrentValue = false,
    Callback = function(v) state.infJump = v end
})
TabMove:CreateToggle({
    Name = "Fly",
    CurrentValue = false,
    Callback = function(v) state.fly = v flyToggle(v) end
})
TabMove:CreateSlider({
    Name = "Fly Speed",
    Range = {10,200},
    Increment = 5,
    CurrentValue = 50,
    Callback = function(v) state.flySpeed = v end
})
TabMove:CreateSlider({
    Name = "WalkSpeed Boost",
    Range = {16,200},
    Increment = 2,
    CurrentValue = 16,
    Callback = function(v) 
        state.wsBoost = v 
        if LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("Humanoid") then
            LocalPlayer.Character.Humanoid.WalkSpeed = v
        end
    end
})
TabMove:CreateToggle({
    Name = "Noclip",
    CurrentValue = false,
    Callback = function(v) state.noclip = v end
})

-- Aba Visual
local TabVisual = Window:CreateTab("Visual")
TabVisual:CreateToggle({
    Name = "ESP Players",
    CurrentValue = false,
    Callback = function(v) state.esp = v toggleESP(v) end
})
TabVisual:CreateToggle({
    Name = "FullBright",
    CurrentValue = false,
    Callback = function(v) state.fullbright = v toggleFullBright(v) end
})

-- Aba Extra
local TabExtra = Window:CreateTab("Extras")
TabExtra:CreateButton({
    Name = "Respawn",
    Callback = function()
        if LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("Humanoid") then
            LocalPlayer.Character.Humanoid.Health = 0
        end
    end
})
TabExtra:CreateButton({
    Name = "Teleport to Random Player",
    Callback = function()
        local others = {}
        for _,p in pairs(Players:GetPlayers()) do
            if p ~= LocalPlayer and p.Character and p.Character:FindFirstChild("HumanoidRootPart") then
                table.insert(others, p)
            end
        end
        if #others > 0 then
            local target = others[math.random(1,#others)]
            LocalPlayer.Character:PivotTo(target.Character.HumanoidRootPart.CFrame + Vector3.new(2,0,2))
        end
    end
})
TabExtra:CreateButton({
    Name = "Godmode (simples)",
    Callback = function()
        if LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("Humanoid") then
            LocalPlayer.Character.Humanoid.MaxHealth = math.huge
            LocalPlayer.Character.Humanoid.Health = math.huge
        end
    end
})
